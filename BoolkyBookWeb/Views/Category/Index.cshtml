@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category Page </h1>

    <table class="table table-bordered table-striped" id="basic-1" style="width:100%">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Display Order</th>
          <th>Created Date Time</th>
        </tr> 
      </thead> 
      <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Id
                    </td>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="50%">
                        @obj.DisplayOrder
                    </td>
                    <td width="50%">
                        @obj.CreatedDateTime
                    </td>
                </tr>
            }
      </tbody>
    </table>
    